{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 编译整个项目",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\start.cpp",
                "${workspaceFolder}\\user\\user.cpp",
                "${workspaceFolder}\\page\\page.cpp",
                "${workspaceFolder}\\store\\store.cpp",
                "${workspaceFolder}\\order\\order.cpp",
                "${workspaceFolder}\\ordermanager\\ordermanager.cpp",
                "-o",
                "${workspaceFolder}\\main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译整个 main 目录下的所有 cpp 文件。"
        },
        {
            "type": "cppbuild",
            "label": "编译客户端",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-I${workspaceFolder}",
                "${workspaceFolder}\\client\\client_main.cpp",
                "${workspaceFolder}\\client\\client_api.cpp",
                "${workspaceFolder}\\client\\client_ui.cpp",
                "${workspaceFolder}\\network\\socket.cpp",
                "${workspaceFolder}\\network\\protocol.cpp",
                "-o",
                "${workspaceFolder}\\build\\client.exe",
                "-lws2_32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译客户端程序"
        },
        {
            "type": "cppbuild",
            "label": "编译服务器",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-I${workspaceFolder}",
                "${workspaceFolder}\\server\\server_main.cpp",
                "${workspaceFolder}\\server\\request_handler.cpp",
                "${workspaceFolder}\\network\\socket.cpp",
                "${workspaceFolder}\\network\\protocol.cpp",
                "${workspaceFolder}\\user\\user.cpp",
                "${workspaceFolder}\\store\\store.cpp",
                "${workspaceFolder}\\order\\order.cpp",
                "${workspaceFolder}\\ordermanager\\ordermanager.cpp",
                "-o",
                "${workspaceFolder}\\build\\server.exe",
                "-lws2_32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译服务器程序"
        }
    ],
    "version": "2.0.0"
}